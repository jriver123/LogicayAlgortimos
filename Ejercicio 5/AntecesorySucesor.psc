Proceso AntecesorySucesor
	Definir num1, antecesor, sucesor Como Entero;
	Escribir 'Ingrese un número';
	Leer num1;
	Escribir 'su número es ', num1;
	antecesor <- num1-1;
	sucesor <- num1+1;
	Escribir 'El número antecesor de ', num1, ' es ', antecesor;
	Escribir 'El número sucesor de ', num1, ' es ', sucesor;
FinProceso
