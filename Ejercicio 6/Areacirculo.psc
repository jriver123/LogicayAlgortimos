Proceso Areacirculo
	Definir radio, radiocuadrado, area Como Real;
	Escribir 'Ingrese el dígito del radio de la circunferencia';
	Leer radio;
	Escribir 'Su radio es de ', radio;
	radiocuadrado <- radio*radio;
	Escribir 'Su radio al cuadrado es igual a ', radiocuadrado;
	area <- 3.1416*radiocuadrado;
	Escribir 'El área del circulo con radio ', radio, ' es de ', area;
FinProceso
